<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_back_all"
    android:orientation="vertical">




    <TextView
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_000000"
        android:text="@string/标题"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:gravity="center"
        android:id="@+id/title_msg"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_000000"
        android:text="@string/标题"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/color_33000000"
        android:layout_height="1px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:id="@+id/cancel"
              android:gravity="center"
              android:textColor="@color/color_4d4d4d"
              android:text="@string/取消"
              android:layout_height="wrap_content"/>

          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:paddingTop="10dp"
              android:id="@+id/ok"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:textColor="@color/color_2e84e6"
              android:text="@string/确认"
              android:layout_height="wrap_content"/>


      </LinearLayout>


        <TextView
            android:layout_width="1px"
            android:layout_centerHorizontal="true"
            android:background="@color/color_33000000"
            android:layout_height="40dp"/>


    </RelativeLayout>



</LinearLayout>