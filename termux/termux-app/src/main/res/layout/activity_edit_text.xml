<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_161823"
    android:layout_height="match_parent"
    tools:context=".zerocore.activity.EditTextActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/button_ll"
        android:background="@drawable/shape_line_2e84e6"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/edit_text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:text=""
            android:gravity="left"
            android:visibility="gone"
            android:textColor="@color/color_ffffff"
            android:textSize="15sp"
            android:layout_height="match_parent"/>

        <me.testica.codeeditor.Editor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            app:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/button_ll"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/other"
            android:layout_height="35dp"
            android:background="@drawable/shape_r_3dp_553d_all"
            android:gravity="center"
            android:visibility="invisible"
            android:text="按钮"
            android:textColor="@color/color_ffffff"
            android:layout_marginRight="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/shape_r_3dp_553d_all"
            android:gravity="center"
            android:id="@+id/ok"
            android:layout_marginRight="5dp"
            android:text="@string/edit_save"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/shape_r_3dp_553d_all"
            android:gravity="center"
            android:id="@+id/cancel"
            android:text="@string/edit_cancel"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />


    </LinearLayout>

</RelativeLayout>
